{
  "configurations": [
    {
      "type": "cppvsdbg",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceFolder}/target/debug/program.exe",
      "preLaunchTask": "cargo build",

      "cwd": "${workspaceFolder}"
    },
    {
      "type": "cppvsdbg",
      "request": "launch",
      "name": "Release",
      "program": "${workspaceFolder}/target/release/program.exe",
      "preLaunchTask": "cargo build --release",

      "cwd": "${workspaceFolder}"
    }
  ]
}
